<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_item_nbarecord"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_nbarecord"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/bg01" />

        <TextView
            android:id="@+id/tv_item_nbarecord_team_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="火箭"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_nbarecord_team_win"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="20"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_nbarecord_team_defeat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="40"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_nbarecord_team_winrate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="33.3%"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_nbarecord_team_windifference"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="4.5"
        android:textSize="16sp" />
</LinearLayout>
