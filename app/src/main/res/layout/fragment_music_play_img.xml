<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ct.sprintnba_demo01.mview.AlbumCoverView
        android:id="@+id/album_music_play_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc_music_play_img"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:lrcAnimationDuration="1000"
        app:lrcCurrentTextColor="@color/colorPrimary"
        app:lrcDividerHeight="10dp"
        app:lrcNormalTextColor="#FFFFFF"
        app:lrcTextSize="16sp" />

</LinearLayout>
