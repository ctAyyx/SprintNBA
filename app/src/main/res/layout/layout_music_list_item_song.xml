<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_music_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_music_item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="测试百题"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_music_item_special"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="测试百题"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_music_item_more"
            android:layout_width="20dp"
            android:layout_height="49dp"
            android:layout_gravity="right|top"
            android:contentDescription="@null"
            android:src="@drawable/ic_music_list_icon_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#DDDDDD" />
    </FrameLayout>

</LinearLayout>
